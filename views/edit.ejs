<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="create-donor content">
    <form action="/donors/<%= donor._id %>" method="POST">
        <input type="hidden" name="_method" value="PATCH">
        <label for="bloodGroup">Blood Group</label>
        <input type="text" id="bloodGroup" name="bloodGroup" required>
        <label for="dname">Donor Name:</label>
        <input type="text" id="dname" name="dname" required>
        <label for="address">Address:</label>
        <textarea id="address" name="address" required></textarea>
        <button>Submit</button>
    </form>
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>